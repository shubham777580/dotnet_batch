@{
}

@model IEnumerable<Laptop_company>

@{
    ViewData["Title"] = "List of Laptop Companies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

       @* basic display of content in table heading :*@
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>

                    @*for admin CRUD opertions*@
                   @* @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }*@
                </tr>
            </thead>
            <tbody>

                @*for display from model (data from database)*@
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="circle" src="@item.Logo" alt="@item.Name" style="max-width: 1500px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>edit </a> |
                            <a class="btn btn-outline-info" asp-action="details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>details </a> |
                            <a class="btn btn-danger text-white" asp-action="delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>delete </a>
                     </td>

                    @*for edit, delete, details button*@
                    @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    }*@
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

