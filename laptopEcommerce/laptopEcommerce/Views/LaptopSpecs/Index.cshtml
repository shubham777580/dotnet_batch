@{
}

@model IEnumerable<Laptop_specs>

@{
    ViewData["Title"] = "List of Laptop";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Laptop_Name
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageUrl" width="100%" alt="@item.Laptop_Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Laptop_Description</p>
                            <p class="card-text"><b>Laptop Company: </b>@item.Laptop_company.Name</p>
                            <p class="card-text"><b>Category: </b>@item.LaptopCategory</p>
                            <p class="card-text"><b>Laptop CPU: </b>@item.Laptop_cpu</p>
                            <p class="card-text"><b>Laptop GPU: </b>@item.LaptopCategory</p>
                           

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                
                                

                                <a class="btn btn-primary" href="https://www.example.com/" role="button" target="_blank"> Buy Now (Price @item.price.ToString("Rs. ")) </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



